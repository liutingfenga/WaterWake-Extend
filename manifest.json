{
  "manifest_version": 3,
  "name": "一定喝水",
  "version": "1.0",
  "description": "喝水不要下次一定，要一定喝水！",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options.html"
}
